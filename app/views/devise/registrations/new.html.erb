<%= stylesheet_link_tag "form" %>
<div class="form-container">
  <div class="form-title"><%= I18n.t("sign_up") %></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= I18n.t("email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
    </div>

    <div class="field">
      <%= I18n.t("password") %><br />
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
    </div>

    <div class="field">
      <%= I18n.t("password_confirmation") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>

    <div class="actions">
      <%= f.submit I18n.t("sign_up") %>
      <%= link_to I18n.t("log_in"), new_user_session_path %>
    </div>
  <% end %>
</div>
